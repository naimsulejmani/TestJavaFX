<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.CalculatorController">

    <TextField text="0" alignment="CENTER_RIGHT" fx:id="txtResult" GridPane.columnSpan="5"/>

    <!--reshti 1 -->
    <!-- fx:id  eshte njejte si ne html se si me ju referencu objektit ne fjale -->
    <Button text="x^2" fx:id="btnSquare" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="50" prefHeight="35"
            onAction="#square"
    />
    <Button text="x^y" fx:id="btnPowXY" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="50" prefHeight="35"/>
    <Button text="sin" fx:id="btnSin" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="50" prefHeight="35"
            onAction="#sinPressed"
    />
    <Button text="cos" fx:id="btnCos" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="50" prefHeight="35"
    />
    <Button text="tan" fx:id="btnTan" GridPane.rowIndex="1" GridPane.columnIndex="4" prefWidth="50" prefHeight="35"/>
    <!--reshti 2 -->
    <Button text="RR" fx:id="btnSquareRoot" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="50"
            prefHeight="35"/>
    <Button text="10^x" fx:id="btn10x" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="50" prefHeight="35"/>
    <Button text="log" fx:id="btnLog" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="50" prefHeight="35"/>
    <Button text="Exp" fx:id="btnExponent" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="50"
            prefHeight="35"/>
    <Button text="Mod" fx:id="btnModulus" GridPane.rowIndex="2" GridPane.columnIndex="4" prefWidth="50"
            prefHeight="35"/>

    <!--reshti 3 -->
    <Button text="|&amp;|" fx:id="btnChange" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="50"
            prefHeight="35"/>
    <Button text="CE" fx:id="btnCE" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="50" prefHeight="35"/>
    <Button text="C" fx:id="btnC" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="50" prefHeight="35"
        onAction="#clear"
    />
    <Button text="&lt;-" fx:id="btnRemoveRight" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="50"
            prefHeight="35"/>
    <Button text="/" fx:id="btnDivide" GridPane.rowIndex="3" GridPane.columnIndex="4" prefWidth="50" prefHeight="35"/>
    <!--reshti 4 -->
    <Button text="PI" fx:id="btnPI" GridPane.rowIndex="4" GridPane.columnIndex="0" prefWidth="50" prefHeight="35"/>
    <Button text="7" fx:id="btn7" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="50" prefHeight="35"
            onAction="#setValue"
    />
    <Button text="8" fx:id="btn8" GridPane.rowIndex="4" GridPane.columnIndex="2" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="9" fx:id="btn9" GridPane.rowIndex="4" GridPane.columnIndex="3" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="x" fx:id="btnMultiply" GridPane.rowIndex="4" GridPane.columnIndex="4" prefWidth="50" prefHeight="35"/>

    <!--reshti 5 -->
    <Button text="n!" fx:id="btnNFactorial" GridPane.rowIndex="5" GridPane.columnIndex="0" prefWidth="50"
            prefHeight="35"/>
    <Button text="4" fx:id="btn4" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="5" fx:id="btn5" GridPane.rowIndex="5" GridPane.columnIndex="2" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="6" fx:id="btn6" GridPane.rowIndex="5" GridPane.columnIndex="3" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="-" fx:id="btnMinus" GridPane.rowIndex="5" GridPane.columnIndex="4" prefWidth="50" prefHeight="35"/>

    <!--reshti 6 -->
    <Button text="+/-" fx:id="btnChangeSign" GridPane.rowIndex="6" GridPane.columnIndex="0" prefWidth="50"
            prefHeight="35" onAction="#changeSign"/>
    <Button text="1" fx:id="btn1" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="2" fx:id="btn2" GridPane.rowIndex="6" GridPane.columnIndex="2" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="3" fx:id="btn3" GridPane.rowIndex="6" GridPane.columnIndex="3" prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="+" fx:id="btnPlus" GridPane.rowIndex="6" GridPane.columnIndex="4" prefWidth="50" prefHeight="35"/>

    <!--reshti 7 -->
    <Button text="(" fx:id="btnOpenBracket" GridPane.rowIndex="7" GridPane.columnIndex="0"
            prefWidth="50" prefHeight="35"/>
    <Button text=")" fx:id="btnCloseBracket" GridPane.rowIndex="7" GridPane.columnIndex="1"
            prefWidth="50" prefHeight="35"/>
    <Button text="0" fx:id="btn0" GridPane.rowIndex="7" GridPane.columnIndex="2"
            prefWidth="50" prefHeight="35"
            onAction="#setValue"/>
    <Button text="." fx:id="btnDot" GridPane.rowIndex="7" GridPane.columnIndex="3"
            prefWidth="50" prefHeight="35"
            onAction="#setDotValue"/>
    <Button text="=" fx:id="btnEqually" GridPane.rowIndex="7" GridPane.columnIndex="4"
            prefWidth="50" prefHeight="35"/>
</GridPane>
